{
  "apps": [
    {
      "name": "api",
      "script": "api.js",
      "max_restarts": 999,
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "pmx": false,
      "env_production": {
        "NODE_ENV": "production",
        "HTTP_PORT": 443,
        "HTTP_PROTOCOL": "https"
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "max_restarts": 999,
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "pmx": false,
      "env_production": {
        "NODE_ENV": "production",
        "PROXY_PORT": 80
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": ["161.35.225.85", "149.28.198.68"],
      "ref": "origin/master",
      "repo": "git@github.com:forwardemail/forwardemail.net.git",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "pnpm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-api.json --env production --update-env"
    }
  }
}
